# -*- coding: utf-8 -*-
#:import hex kivy.utils.get_color_from_hex
#:import ListItemButton kivy.uix.listview.ListItemButton
#:import ListAdapter kivy.adapters.listadapter.ListAdapter

<ListItemButton>:

    selected_color:     hex("#2ca539")
    deselected_color:   hex("#2ca539")
    font_size:          "20sp"
    size:               (100, "48dp")

<TelaHome>:

    FloatLayout:
        canvas:
            Color:
                rgb:    1, 1, 1
            Rectangle:
                source: "./imgs/fundo.jpg"
                size:   self.size

        Image:
            size_hint:  (.50, .20)
            source:     "./imgs/logo.png"
            pos_hint:   {"center_x": .50, "center_y": .90}

        Label:
            id:         name
            text:       "-"
            pos_hint:   {"center_x": .50, "center_y": .73}
            font_size:  "40sp"
            color:      hex("#545454")

        BoxLayout:
            size_hint:      (.95, .50)
            pos_hint:       {"center_x": .50, "center_y": .42}
            canvas:
                Color:
                    rgb:    hex("#baffc1")
                Rectangle:
                    size:   self.size
                    pos:    self.pos
            ListView:
                id:         list
                adapter:    ListAdapter( data=["Clique abaixo para atualizar"], selection_mode="none", cls=ListItemButton )

        Button:
            size_hint:          (.75, .12)
            pos_hint:           {"center_x": .40, "center_y": .10}
            text:               "Atualizar"
            font_size:          "30sp"
            on_press:           root.atualizarDados()
            background_color:   hex("#2ca539")

        Button:
            size_hint:          (.20, .12)
            pos_hint:           {"center_x": .875, "center_y": .10}
            text:               "Sair"
            font_size:          "30sp"
            on_press:           root.sair()
            background_color:   hex("#bc2b2b")
